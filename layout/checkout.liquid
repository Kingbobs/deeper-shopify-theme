<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>  
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="facebook-domain-verification" content="gl3b7m3xiu1v6f1i3rrf5nhnc5prlb" />
    <meta name="referrer" content="origin">
<!--     <meta http-equiv="Content-Security-Policy" content="script-src 'self' *;"> -->

<!--     <meta http-equiv="Content-Security-Policy" content="script-src 'self' *; frame-src 'self' *.deeper.network; child-src c.paypal.com cdn.shopify.com cdn.shopifycdn.net;"> -->
    
    <script src="{{ 'jquery.js' | asset_url }}" defer="defer"></script>
<!--     <link href="{{ 'jq-modal.css' | asset_url }}" rel="stylesheet" > -->
<!--     <script src="{{ 'jq-modal.js' | asset_url }}" defer="defer"></script> -->
    <script src="{{ 'getFrom.js' | asset_url }}" defer="defer"></script>
    <!--   creazyEgg -->
	<script type="text/javascript" src="//script.crazyegg.com/pages/scripts/0112/6284.js" async="async" ></script>
    

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
<style>
  .payment-icon--wechatpay, .payment-icon--gcash, .payment-icon-list__more{
display: none;
}
  </style>
  </head>
  <body>

    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}  
    
    <style>
      .payment-due__price{
        color: #FF5502 !important;
      }
      
      #checkout_reduction_code {
        border-color: #FF5502 !important;
      }
      
    </style>

    <script>
      setTimeout(function(){
        console.log('toggle')
        document.querySelector('.order-summary-toggle').click();
      },3000)
    </script>
    
  </body>
</html>
