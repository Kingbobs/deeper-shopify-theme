<!-- /sections/section-feature-protect-your-iot-devices.liquid -->

<div id="section-feature-protect-your-iot-devices" class="section-row {{ section.settings.color_bg }}" 
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }} section-padding">
    <div class="text__standard" style="margin-bottom: {{ section.settings.padding_bottom }}px">
      <h1 class="h2 standard__heading heading-size-6" >Protect All Your IoT Devices</h1>
    <div>

    <div class="overlap">
      <div class="overlap__item overlap__text">
        <div id="supports" class="overlap__content__wrapper">          
          <ul class="mobile--hide small-down--hide small-hide medium--show large--show widescreen--show">
            <li class="one-seventh">
              <img  src="{{ 'iocn_iPhoneiPad.png'  | asset_url }}" >
              <p>iPhone/iPad</p>
            </li>
            <li class="one-seventh">
              <img  src="{{ 'iocn_Android.png'  | asset_url }}" >
              <p>Android</p>
            </li>
            <li class="one-seventh">
              <img  src="{{ 'icon_Windows.png'  | asset_url }}" >
              <p>Windows</p>
            </li>
            <li class="one-seventh">
              <img  src="{{ 'icon_Mac.png'  | asset_url }}" >
              <p>Mac</p>
            </li>
            <li class="one-seventh">
              <img  src="{{ 'icon_Router.png'  | asset_url }}" >
              <p>Router</p>
            </li>
             <li class="one-seventh">
              <img  src="{{ 'icon_Smart_TV.png'  | asset_url }}" >
              <p>Smart TV</p>
            </li>
            <li class="one-seventh">
              <img  src="{{ 'icon_Game_Consoles.png'  | asset_url }}" >
              <p>Game Consoles</p>
            </li>
          </ul>
            <ul class="mobile--show small-down--show small-show medium--hide large--hide widescreen--hide">
            <li class="one-quarter">
              <img  src="{{ 'iocn_iPhoneiPad.png'  | asset_url }}" >
              <p>iPhone/iPad</p>
            </li>
            <li class="one-quarter">
              <img  src="{{ 'iocn_Android.png'  | asset_url }}" >
              <p>Android</p>
            </li>
            <li class="one-quarter">
              <img  src="{{ 'icon_Windows.png'  | asset_url }}" >
              <p>Windows</p>
            </li>
            <li class="one-quarter">
              <img  src="{{ 'icon_Mac.png'  | asset_url }}" >
              <p>Mac</p>
            </li>
            <li class="one-quarter">
              <img  src="{{ 'icon_Router.png'  | asset_url }}" >
              <p>Router</p>
            </li>
            <li class="one-quarter">
              <img  src="{{ 'icon_Smart_TV.png'  | asset_url }}" >
              <p>Smart TV</p>
            </li>
            <li class="one-quarter">
              <img  src="{{ 'icon_Game_Consoles.png'  | asset_url }}" >
              <p>Game Consoles</p>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="overlap" style="margin-top:16px;">
      <div class="overlap__item overlap__text">
        <div class="overlap__content__wrapper">
          <div class="rte-setting section--rte overlap__rte body-size-2">
            <p>Deeper Connect protects phones, computers, tablets, smart TVs, game consoles, and all devices in your network.</p>
            <p>Deeper Connect grants peace of mind and prevents malicious actors from gaining access to your personal information, IoT devices, personal computers, and anything else connected to your network. There is no configuration necessary, once the device is powered on your entire network will be secure.</p>
          </div>
        </div>
      </div>
      <div class="overlap__item overlap__image">
        {%- assign right_image = 'protect_1.jpg' | asset_url -%}
        {%- render 'image-fill', img_object: right_image , bg_position: 'Center', aspect_ratio: 0.58 -%}
      </div>
    </div>

    <div class="overlap">
      <div class="overlap__item overlap__image">
        {%- assign left_image = 'protect_2.jpg' | asset_url -%}
        {%- render 'image-fill', img_object: left_image , bg_position: 'Center', aspect_ratio: 0.58 -%}
      </div>
      <div class="overlap__item overlap__text">
        <div class="overlap__content__wrapper">
          <div class="rte-setting section--rte overlap__rte body-size-2">
            <p>Deeper  Connect has been designed by top-level network security and distributed systems experts. The company's core technical team are veterans from Google, Palo Alto Networks, VMware, and other industry-leading companies.</p>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<style>
  #section-feature-protect-your-iot-devices .text__standard{
    color: #170F49 !important;
    font-weight: 400;
  }
  #supports{
    margin:0;
    padding: 0;
  }
  #supports ul {
    flex-direction: column;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  #supports ul li {
    float: left;
    text-align: center;
  }

  #supports ul li img { 
    width: 30% !important;
    margin-left: auto;
    margin-right: auto;
  }

  #supports ul li p {
    /* Button/Primary */
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    margin:0px;
    padding:0px;
    /* identical to box height, or 150% */
    text-align: center;
    /* Text/强调、正文标题 */
    color: #170F49;
  }
  .one-quarter ul li {
    margin-bottom: 10px !important;
  } 
  .one-quarter p {
    font-size: 12px !important;
  }
</style>

{% schema %}
  {
    "name": "Feature Protect Devices",
    "class": "section-section",
    "settings": [
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "bg_position",
        "label": "Position",
        "default": "center-center",
        "options": [
          { "label": "Top", "value": "center-top" },
          { "label": "Right", "value": "right-center" },
          { "label": "Center", "value": "center-center" },
          { "label": "Left", "value": "left-center" },
          { "label": "Bottom", "value": "center-bottom" }
        ]
      }, 
      {
        "type": "range",
        "id": "aspect_ratio",
        "min": 0.5,
        "max": 1.5,
        "step": 0.1,
        "unit": ":1",
        "label": "Photo aspect ratio",
        "info": "Wide to tall",
        "default": 1
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Image placement",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Image with text"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
      {
        "type": "select",
        "id": "color_text_bg",
        "label": "Background color",
        "default": "palette--light bg--accent",
        "options": [
          { "value": "palette--light bg--neutral", "label": "Default"},
          { "value": "palette--light bg--accent", "label": "Light"},
          { "value": "palette--dark bg--invert", "label": "Dark"},
          { "value": "palette--dark bg--invert--accent", "label": "Dark accent"}
        ]
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button style",
        "default": "btn",
        "options": [
          { "value": "btn", "label": "Solid button"},
          { "value": "btn--soft", "label": "Soft button"},
          { "value": "btn--outline", "label": "Outlined button"}
        ]
      },
      {
        "type": "select",
        "id": "button_color",
        "label": "Color",
        "default": "btn--neutral",
        "options": [
          { "value": "btn--primary", "label": "Primary accent" },
          { "value": "btn--secondary", "label": "Secondary accent" },
          { "value": "btn--neutral", "label": "Text color" },
          { "value": "btn--black", "label": "Black" },
          { "value": "btn--white", "label": "White" }
        ]
      },
      {
        "type": "header",
        "content": "Style"
      },
      {
        "type": "select",
        "id": "color_bg",
        "label": "Background color",
        "default": "palette--light bg--neutral",
        "options": [
          { "value": "palette--light bg--neutral", "label": "Default"},
          { "value": "palette--light bg--accent", "label": "Light"},
          { "value": "palette--dark bg--invert", "label": "Dark"},
          { "value": "palette--dark bg--invert--accent", "label": "Dark accent"}
        ]
      },
      {
        "type": "header",
        "content": "Section spacing"
      },
      {
        "type": "select",
        "id": "width",
        "label": "Width",
        "default": "wrapper",
        "options": [
          { "value": "wrapper--full", "label": "Full width padded" },
          { "value": "wrapper", "label": "Page width" },
          { "value": "wrapper--narrow", "label": "Page width narrow" }
        ]
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Feature Protect Devices",
        "category": "Deeper Section"
      } 
    ]
  }
{% endschema %}
