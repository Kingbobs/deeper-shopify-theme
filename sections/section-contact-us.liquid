{% schema %}
  {
    "name": "Contact Us",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 0
      },
      {
        "type": "select",
        "id": "width",
        "label": "Section width",
        "default": "wrapper--none",
        "options": [
          { "value": "wrapper--none", "label": "Full width" },
          { "value": "wrapper--full", "label": "Full width padded" },
          { "value": "wrapper", "label": "Page width" },
          { "value": "wrapper--narrow", "label": "Page width narrow" }
        ]
      }
	  ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type":"url",
            "id":"image_link",
            "label":"Link"
          }
        ]
      }
    ],
    "presets": [
      {
          "name": "Contact Us",
          "category": "My Sections"
      }
    ]
  } 
{% endschema %}

<div
  id="contact-us"
  data-section-id="{{ section.id }}" 
  data-section-type="section-collection" 
  class="grid"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px; "> 
  <div class="{{ section.settings.width }} section-padding section-contact-us">
    <div class="grid__item large-up--one-third  mobile--one-whole">
      <div class="section--image {{ section.settings.place_text }} {{ section.settings.align_text }}">
        <div class="contactUsItem">
          <img width="24px" src="{{ 'location.png' | asset_url }}"/>
          <div class="contactUsItem_title">Address</div>
          <div class="contactUsItem_intro">
            <p>5200 Great America Pkwy, <br />Santa Clara, CA  USA 95054</p>
            <p>
              E-mail:  <span style="color: #495AF5 !important;">information@deeper.network</span><br />
              Website:<a style="color: #495AF5 !important;" href="https://shop.deeper.network" >https://shop.deeper.network/</a>
            </p>
            <p><b>Business hours</b> <br />Monday - Friday 09:00 - 17:00（Central Time）</p>
          </div>
        </div>
      </div>
    </div>
    <div class="grid__item large-up--one-third mobile--one-whole">
      <div class="section--image {{ section.settings.place_text }} {{ section.settings.align_text }}">
        <div class="contactUsItem">
          <img width="24px" src="{{ 'customer-service.png' | asset_url }}"/>
          <div class="contactUsItem_title">Customer Support</div>
          <div class="contactUsItem_intro">
            <p>For customer support, please reach out to our helpdesk:<br /> <a style="color: #495AF5 !important;" href="https://support.deeper.network">Support.deeper.network</a></p>
          </div>
        </div>
      </div>
    </div>
    <div class="grid__item large-up--one-third mobile--one-whole">
      <div class="section--image {{ section.settings.place_text }} {{ section.settings.align_text }}">
        <div class="contactUsItem">
          <img width="24px"  src="{{ 'user-group.png' | asset_url }}"/>
          <div class="contactUsItem_title">Business Inquiry</div>
          <div class="contactUsItem_intro">
            <p>
              For business collaboration inquiries, please email us at:<br /><a style="color: #495AF5 !important;" href="mailto:marketing@deeper.network">marketing@deeper.network</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="{{ section.settings.width }} section-padding section-contact-us">
    <div class="grid__item large-up--one-half  mobile--one-whole">
      <div class="section--image {{ section.settings.place_text }} {{ section.settings.align_text }}">
        <div class="contactUsItem" style="height: auto">
          <div class="contactUsItem_title">Before You Buy</div>
          <div class="contactUsItem_intro">
            <p>If you have any questions about the specifications, performance, components, discount, and warranty policies of Deeper Network, please contact us.</p>
            <a href="https://support.deeper.network" class="contactButton">Ask Before You Buy</a>
          </div>
        </div>
      </div>
    </div>
    <div class="grid__item large-up--one-half mobile--one-whole">
      <div class="section--image {{ section.settings.place_text }} {{ section.settings.align_text }}">
        <div class="contactUsItem" style="height: auto">
          <div class="contactUsItem_title">After-Sales</div>
          <div class="contactUsItem_intro">
            <p>If you have any issues, after you receive the device, please contact us via the button, and we will get back to you ASAP.</p>
            <a href="https://support.deeper.network" class="contactButton">Technical Support</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .section-contact-us{}

  .contactUsItem{
    margin-top:24px;
    display: flex;
    flex-direction: column;
    padding: 32px 24px;
    width: 100%;
    height: 396px;
    /* Fill/浅、禁用 */
    background: #F7F7FB;
    border-radius: 8px;
    /* Inside auto layout */
    flex: none;
    order: 0;
    flex-grow: 0;
  }

  .contactUsItem_title {
      /* Headline/H6 */
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 600 !important;
    font-size: 18px !important;
    line-height: 26px;
    margin-top:16px;
    /* identical to box height, or 144% */
    /* Text/强调、正文标题 */
    color: #170F49 !important;
  }

  .contactUsItem_intro{ 
    margin-top:0px;
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 26px;
    /* or 157% */
    /* Text/强调、正文标题 */
    color: #170F49;
  }
 
  .contactButton{
    margin-top: 40px;
    display:block;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    width: 60%;
    padding: 10px;
    border: 1px solid #170F49;
    color: #170F49 !important;
  }

{% endstylesheet %}

