{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "label": "Footer logo",
        "type": "image_picker",
        "id": "footer_logo",
        "info": "400 x 200px .png"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 450,
        "step": 10,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "richtext",
        "id": "footer_description",
        "label": "Text",
        "default": "<p>This area is used to describe your store.</p>"
      },
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "First menu",
        "default": "main-menu",
        "info": "This menu won't show dropdown items"
      },
      {
        "type": "link_list",
        "id": "footer_second_linklist",
        "label": "Second menu",
        "default": "footer",
        "info": "This menu won't show dropdown items"
      },
      {
        "type": "link_list",
        "id": "footer_third_linklist",
        "label": "Third menu",
        "default": "footer",
        "info": "This menu won't show dropdown items"
      },
      {
        "type": "checkbox",
        "id": "footer_social_enable",
        "label": "Show social icons",
        "default": true,
        "info": "Show icons for all links in your social media theme settings"
      },
      {
        "type": "checkbox",
        "id": "footer_payment_enable",
        "label": "Show payment icons",
        "default": true,
        "info": "Show icons for payment providers enabled in your Shopify settings"
      },
      {
        "type": "header",
        "content": "Language selector",
        "info": "To add a language, go to your [language settings.](/admin/settings/languages)"
      },
      {
        "type": "checkbox",
        "id": "show_locale_selector",
        "label": "Show language selector",
        "default": true
      },
      {
        "type": "header",
        "content": "Country/Region selector",
        "info": "To add a currency, go to your [markets settings.](/admin/settings/markets)"
      },
      {
        "type": "checkbox",
        "id": "show_currency_selector",
        "label": "Show country/region selector",
        "default": true
      },
      {
        "type": "select",
        "id": "currency_select_type",
        "label": "Type",
        "default": "country",
        "options": [
          {
            "value": "country",
            "label": "Country"
          },
          {
            "value": "currency",
            "label": "Currency"
          }
        ]
      }
    ]
  }

{% endschema %}
