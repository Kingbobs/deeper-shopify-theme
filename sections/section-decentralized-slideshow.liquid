<div class="homepage-slideshow {{ section.settings.dots_position }}" data-section-id="{{ section.id }}" data-section-type="slideshow" {% if section.settings.width == "wrapper--none" and section.settings.padding_top == 0 %} data-overlay-header {% endif %}
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }} section-padding">
    {% if section.blocks.size > 0 %}
      <div class="slideshow__wrapper">
        {% for block in section.blocks %}
          <div class="slideshow__slide  js-overflow-container section--image {{ block.settings.text_color }}" data-slideshow-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
          
            <div class="hero__content__wrapper align--top-center mobile--show small-down--show small-hide medium--hide large--hide widescreen--hide">
              <h1 class="hero__title h3">Get The Best Decentralized <br/> VPN for Your Network</h1>
            </div>
            <div class="hero__content__wrapper align--bottom-left">
              <div class="hero__content mobile--padding-bottom {{ block.settings.color_bg }}">
              <div class="mobile--hide small-down--hide small-hide medium--show large--show widescreen--show">
                <h1 class="hero__title h3 ">Get The Best Decentralized <br/> VPN for Your Network</h1>
                <div class="hero__description h5--body">
                  <p>Empower all devices in your home network with a next-gen VPN.</p>
                  <ul>
                    <li>Protect your privacy and data with one device</li>
                    <li>Free for life, never pay monthly subscriptions again</li>
                    <li>Connect intelligently to any location</li>
                  </ul>
                </div>
                <a id="get_deeper_connect" class="hero__btn btn--white hero__btn btn" href="#top_collections">Get Deeper Conect</a>
                <a id="why_use_a_dvpn" class="hero__btn btn--primary  hero__btn btn" href="/pages/ecosystem">Why Use a dVPN?</a>
              </div>

              <div class="mobile--show small-down--show small-show medium--hide large--hide widescreen--hide">
                <div class="hero__description h5--body">
                  <p>Empower all devices in your home network with a next-gen VPN.</p>
                  <ul>
                    <li>Protect your privacy and data with one device</li>
                    <li>Free for life, never pay monthly subscriptions again</li>
                    <li>Connect intelligently to any location</li>
                  </ul>
                </div>
                <div class="hero__btn_group">
                  <a id="get_deeper_connect" class="hero__btn btn--white hero__btn btn" href="#top_collections">Get Deeper Conect</a>
                  <a id="why_use_a_dvpn" class="hero__btn btn--primary  hero__btn btn" href="/pages/ecosystem">Why Use a dVPN?</a>
                </div>
              </div>


              </div>
            </div>

            <div class="image-overlay" style="--bg:{{ block.settings.overlay_color }}; opacity:{{ block.settings.overlay_opacity | times: 0.01 }};"></div>

            {% assign desktop_image_classes = section.settings.height %}
            {% assign mobile_image_classes = section.settings.height | append: ' small-down--show hide' %}
            {% assign mobile_image = '' %}
            {% if block.settings.mobile_image != blank %}
              {% assign desktop_image_classes = desktop_image_classes | append: ' medium-up--show hide' %}

              {% capture mobile_image %}
                {% render 'image-background', img_object: block.settings.mobile_image, frame_height_class: mobile_image_classes, bg_position: block.settings.bg_position %}
              {% endcapture %}
            {% endif %}

            {% render 'image-background', img_object: block.settings.image, frame_height_class: desktop_image_classes, bg_position: block.settings.bg_position %}

            {% if mobile_image != '' %}
              {{ mobile_image }}
            {% endif %}

            {% assign dots_positioned_edge = true %}
            {% if section.settings.dots_position == 'dots--center' %}
              {% assign dots_positioned_edge = false %}
            {% endif %}
            {% if section.settings.height == 'use_screen_full' and dots_positioned_edge %}
              <div class="scroll_icon_wrap">
                <button data-scroll-down class="scroll_link bloop" aria-label="{{ 'general.accessibility.scroll' | t }}">
                  <span class="scroll_icon">{% render 'icon-arrow-down' %}
                  </span>
                </button>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>

